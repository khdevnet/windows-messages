        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SheepClient"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="NoResize" Height="350" Width="525"
        Loaded="Window_OnLoaded">
